<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bit">
  <select id="selectAll" resultType="com.bit.sts04.model.entity.EmpVo">
    select * from emp03 order by sabun desc
  </select>
   <insert id="insertOne" parameterType="com.bit.sts04.model.entity.EmpVo">
   insert into emp03 (name,nalja,pay,deptno) values (#{name},now(),#{pay},#{deptno})
  </insert>
  <select id="selectOne" parameterType="int" resultType="com.bit.sts04.model.entity.EmpVo">
  	select * from emp03 where sabun=${value}
  </select>
</mapper>